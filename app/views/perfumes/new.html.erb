<%= form_for(@perfume, class: 'form-horizontal', role: 'form') do |f| %>
    <div class="perfume-container">

        <div class="col-12">
            <p>Q1. 今の体調は？</p>
        </div>
        <div class="col-6">
            <%= f.radio_button :question1, "1", id: "custom_id1" %>
            <label for="custom_id1">元気</label>
            <%= f.radio_button :question1, "2", id: "custom_id2" %>
            <label for="custom_id2">体調不良</label>
            <%= f.radio_button :question1, "3", id: "custom_id3" %>
            <label for="custom_id3">胃腸の調子が悪い</label>
        </div>

        <div class="col-12">
            <p>Q2. 理想の身体は？</p>
        </div> 
        <div class="col-6">
            <%= f.radio_button :question2, "1", id: "custom_id4" %>
            <label for="custom_id4">免疫強化</label>
            <%= f.radio_button :question2, "2", id: "custom_id5" %>
            <label for="custom_id5">筋肉増強</label>
            <%= f.radio_button :question2, "3", id: "custom_id6" %>
            <label for="custom_id6">脂肪減少</label>
        </div>   

        <div class="col-12">
            <p>Q3. 提案してほしいジャンル</p>
        </div>
        <div class="col-6">
            <%= f.radio_button :question3, "1", id: "custom_id7" %>
            <label for="custom_id7">和食</label>
            <%= f.radio_button :question3, "2", id: "custom_id8" %>
            <label for="custom_id8">洋食</label>
            <%= f.radio_button :question3, "3", id: "custom_id9" %>
            <label for="custom_id9">中華</label>
            <%= f.radio_button :question3, "5", id: "custom_id11" %>
            <label for="custom_id11">デザート</label>
        </div>
    

    <div class="sindanbotan">
        <%= f.submit " 結果 " %>
    </div>
  <% end %>
  